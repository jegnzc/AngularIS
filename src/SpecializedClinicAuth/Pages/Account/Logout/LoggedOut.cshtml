@page
@model SpecializedClinicAuth.Pages.Account.Logout.LoggedOut

<div class="logged-out-page">
    <h1>
        
        <small>Ha cerrado su sesión</small>
    </h1>

    @if (Model.View.PostLogoutRedirectUri != null)
    {
        <div>
            Presiona <a class="PostLogoutRedirectUri" href="@Model.View.PostLogoutRedirectUri">el link</a> para iniciar sesión nuevamente.
            @*<span>@Model.View.ClientName</span> *@
        </div>
    }

    @if (Model.View.SignOutIframeUrl != null)
    {
        <iframe width="0" height="0" class="signout" src="@Model.View.SignOutIframeUrl"></iframe>
    }
</div>

@section scripts
    {
    @if (Model.View.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}